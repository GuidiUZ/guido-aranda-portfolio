---
const { title, image, description, techLogos, direction } = Astro.props;
---

<a
    target="_blank"
    href={direction}
    class="flex flex-col border-2 border-[#08F300] p-3 my-5 rounded-md w-full xl:w-[40%] xl:h-[40%] xl:justify-center xl:m-auto xl:my-5 shadow-md shadow-[#08F300]"
>
    <p class="text-white text-xl">{title}</p>
    <img src={image} alt="project image" class="my-5 rounded-xl" />
    <p class="text-white">{description}</p>
    <div class="flex flex-row space-x-4 mt-5 items-center justify-center">
        {
            techLogos.map((logo) => (
                <img src={logo} alt="technology logo" class="w-10 h-10" />
            ))
        }
    </div>
</a>
